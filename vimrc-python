" Turn off VI compatibility
set nocompatible	" disable no Vi compatibility


" ============== "
" Vundle plugins "
" ============== "
filetype off		" temporarily disable for Vundle

" set the runtime path to include Vundle and initialize
set rtp+=~/.vim/bundle/Vundle.vim
call vundle#begin()	" keep default Vundle dir for plugins

" Vundle management
Plugin 'VundleVim/Vundle.vim'

" Python PEP8 indentation rules and behavior
Plugin 'vim-scripts/indentpython.vim'

" Code completion using Jedi - follow additional installation instructions
" https://github.com/Valloric/YouCompleteMe#mac-os-x-super-quick-installation
Bundle 'Valloric/YouCompleteMe'

" Syntax checkers and highlighters
Plugin 'vim-syntastic/syntastic'
Plugin 'nvie/vim-flake8'

" UI color schemes
Plugin 'jnurmine/Zenburn'
Plugin 'altercation/vim-colors-solarized'

" Searching Ctrl+P
Plugin 'kien/ctrlp.vim'

" Powerline status bar
Plugin 'Lokaltog/powerline', {'rtp': 'powerline/bindings/vim/'}

" File browsing extension
Plugin 'tpope/vim-vinegar'

call vundle#end()	" end of Vundle plugins installation


" =============== "
" Common settings "
" =============== "
" screen splitting :sp (vertical) and :vs (horizontal), vertical default
set splitright

"split navigations
" Ctrl+J - move to split below
" Ctrl+K - move to split above
" Ctrl+L - move to split to the right
" Ctrl+H - move to split to the left
nnoremap <C-J> <C-W><C-J>
nnoremap <C-K> <C-W><C-K>
nnoremap <C-L> <C-W><C-L>
nnoremap <C-H> <C-W><C-H>

" enable folding, using <space>
set foldmethod=indent
set foldlevel=99
nnoremap <space> za

" File explorer :Explore, :Sexplore, :Vexplore
let g:netrw_banner = 0
let g:netrw_liststyle = 3
let g:netrw_browse_split = 4
let g:netrw_altv = 1
let g:netrw_winsize = 20
augroup ProjectDrawer
  autocmd!
  autocmd VimEnter * :Vexplore
augroup END


" file formatting Python
set tabstop=4
set softtabstop=4
set shiftwidth=4
set textwidth=79
set expandtab

" encoding
set fileformat=unix
set encoding=utf-8

" line numbering
set nu

" use system clipboard
set clipboard=unnamed


" ============= "
" Plugins setup "
" ============= "
" YouCompleteMe customization, <space>+g goto navigation
let g:ycm_autoclose_preview_window_after_completion=1
map <leader>g  :YcmCompleter GoToDefinitionElseDeclaration<CR>

" python with virtualenv support (required for YouCompleteMe)
py3 << EOF
import os
import sys
if 'VIRTUAL_ENV' in os.environ:
  project_base_dir = os.environ['VIRTUAL_ENV']
  activate_this = os.path.join(project_base_dir, 'bin/activate_this.py')
  execfile(activate_this, dict(__file__=activate_this))
EOF

" UI based on terminal/xserver
if has('gui_running')
  set background=dark
  colorscheme solarized
else
  colorscheme zenburn
endif

" Solarized - dark theme switching by F5
call togglebg#map("<F5>")

" syntax checking and highlighting
let python_highlight_all=1
syntax on


" ============ "
" Finalization "
" ============ "
filetype plugin indent on

" run :PluginInstall in Vim after startup
